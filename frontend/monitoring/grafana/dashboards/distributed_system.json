{
  "dashboard": {
    "title": "Distributed Food Delivery System",
    "uid": "distributed-food-delivery",
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Active Nodes",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(up{job=~\"node-.*\"} == 1)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Total Requests/sec",
        "type": "graph",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (node_name)",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Node CPU Usage",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "100 - (avg by (node_name) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Node Memory Usage",
        "type": "graph",
        "gridPos": {
          "x": 8,
          "y": 8,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Leader Elections",
        "type": "stat",
        "gridPos": {
          "x": 16,
          "y": 8,
          "w": 8,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(leader_elections_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Replication Lag (ms)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "replication_lag_milliseconds",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Lamport Clock Values",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "lamport_clock_value",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Lock Acquisitions",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(distributed_lock_acquisitions_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Active Orders",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 24,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(active_orders_count)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Database Queries/sec",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 24,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(database_queries_total[5m])",
            "legendFormat": "{{node_name}} - {{query_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "Request Latency (p95)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 12,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 32,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (node_name)",
            "legendFormat": "{{node_name}}",
            "refId": "A"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "node",
          "type": "query",
          "query": "label_values(up, node_name)",
          "multi": true,
          "includeAll": true
        }
      ]
    }
  }
}